{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "_comment": "Stryker mutation testing configuration - validates test quality",
  "packageManager": "pnpm",
  "testRunner": "vitest",
  "mutate": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "!src/**/*.test.ts",
    "!src/**/*.test.tsx",
    "!src/**/*.spec.ts",
    "!src/**/*.spec.tsx",
    "!src/**/*.d.ts",
    "!src/setupTests.ts"
  ],
  "reporters": ["html", "clear-text", "progress", "json"],
  "coverageAnalysis": "perTest",
  "thresholds": {
    "high": 80,
    "low": 60,
    "break": 50
  },
  "concurrency": 4,
  "timeoutMS": 60000,
  "timeoutFactor": 1.5,
  "maxConcurrentTestRunners": 2,
  "incremental": true,
  "incrementalFile": ".stryker-tmp/incremental.json",
  "ignorePatterns": ["node_modules", "dist", "coverage", ".stryker-tmp"],
  "plugins": ["@stryker-mutator/vitest-runner"]
}
